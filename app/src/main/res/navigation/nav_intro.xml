<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_intro.xml"
    app:startDestination="@id/intro_fragment">

    <fragment
        android:id="@+id/intro_fragment"
        android:name="com.graymandev.sapp.view.intro.IntroFragment"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_signUpFragment"
            app:destination="@id/sign_up_fragment" />
        <action
            android:id="@+id/action_introFragment_to_signInFragment"
            app:destination="@id/sign_in_fragment" />
    </fragment>
    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.graymandev.sapp.view.sign_up.SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_introFragment"
            app:destination="@id/intro_fragment" />
    </fragment>
    <fragment
        android:id="@+id/sign_in_fragment"
        android:name="com.graymandev.sapp.view.sign_in.SignInFragment"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_introFragment"
            app:destination="@id/intro_fragment" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.graymandev.sapp.MainActivity"
        android:label="MainActivity" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.graymandev.sapp.view.login.LoginActivity"
        android:label="LoginActivity" />
</navigation>