<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_item_store_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_item_store_content">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2.5dp">

            <ImageView
                android:id="@+id/image_view_item_store"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_contentDescription"
                android:src="@drawable/logo_store"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_view_item_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Store name"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_start_rate"
                    />
                <TextView
                    android:id="@+id/text_view_item_store_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/rate_numbers_color"
                    android:text="4.2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_motorcycle"
                    android:layout_marginStart="90dp"
                    />
                <TextView
                    android:id="@+id/text_view_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/delivery_color"
                    android:text="20"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/delivery_color"
                    android:text="min"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_price"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_money"
                android:layout_marginTop="4dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/delivery_color" />

</LinearLayout>