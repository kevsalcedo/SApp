<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_consumables"
        android:layout_width="@dimen/width_card_view_category"
        android:layout_height="@dimen/height_card_view_category"
        android:layout_margin="@dimen/margin_card_view_category"
        app:cardCornerRadius="@dimen/corner_radius_card_view_category"
        app:cardElevation="@dimen/elevation_card_view_category"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_view_category_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/image_consumables"
                android:scaleType="centerCrop"
                android:contentDescription="@string/image_contentDescription"
                />
            <TextView
                android:id="@+id/text_view_category_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_card_consumables"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:background="@color/white_transparent"
                android:padding="@dimen/padding_text_view_sections_title"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>